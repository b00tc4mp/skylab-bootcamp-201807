//g) Crea una array de 5 numeros, y recorrela, mostrando además un mensaje cuando, esté a la mitad, muestre un mensaje 'We are in the middle of loop'.
var loopingArray = [ 1, 2, 3, 5, 8 ]
for (var i = 0; i <= loopingArray.length; i++) {
	if(loopingArray[i] === Math.floor(loopingArray.length/2)){
		console.log("The middle")
	}else{
		console.log("Looping")
	}
}
	


